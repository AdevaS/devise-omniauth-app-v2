<div class="register-box">
  <div class="register-logo">
      <a href="../.."><b>AdevaS</b>ystem</a>
  </div>
  <div class="register-box-body">
    <p class="login-box-msg">Register a new membership</p>
    <%= devise_error_messages! %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group has-feedback">
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Name" %>
        <%= content_tag :span, class: "glyphicon glyphicon-user form-control-feedback" do -%>
        <% end -%>
      </div>
      <div class="form-group has-feedback">
        <%= f.email_field :email, class: "form-control", placeholder: "E-mail" %>
        <%= content_tag :span, class: "glyphicon glyphicon-envelope form-control-feedback" do -%>
        <% end -%>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
        <%= content_tag :span, class: "glyphicon glyphicon-lock form-control-feedback" do -%>
        <% end -%>
      </div>
      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Retype Password" %>
        <%= content_tag :span, class: "glyphicon glyphicon-log-in form-control-feedback" do -%>
        <% end -%>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <!-- <div class="checkbox icheck">
            <label>
              <input type="checkbox"> I agree to the <a href="#">terms</a>
            </label>
          </div> -->
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <%= f.submit "Register", class: "btn btn-primary btn-block btn-flat" %>
        </div>
        <!-- /.col -->
      </div>
    <% end %>

    <%- if devise_mapping.omniauthable? %>
      <div class="social-auth-links text-center">
        <p>- OR -</p>
        <%= link_to omniauth_authorize_path(resource_name, :facebook), class: "btn btn-block btn-social btn-facebook btn-flat" do %>
          <i class="fa fa-facebook"></i>Sign up using Facebook
        <% end %>
        <%= link_to omniauth_authorize_path(resource_name, :google_oauth2), class: "btn btn-block btn-social btn-google btn-flat" do %>
          <i class="fa fa-google-plus"></i>Sign up using Google+
        <% end %>
      </div><!-- /.social-auth-links -->
    <% end -%>

    <%= render "devise/shared/links" %>
  </div>
  <!-- /.form-box -->
</div>
